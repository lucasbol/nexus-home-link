{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Plugins": [
    {
      "Name": "SystemMonitoring",
      "Enabled": true,
      "Assembly": "NexusHomeLink.Plugins.SystemMonitoring",
      "Type": "SystemMonitoringPlugin",
      "Settings": {
        "UpdateInterval": 5000,
        "MetricsRetention": 24
      }
    },
    {
      "Name": "SmartHome",
      "Enabled": true,
      "Assembly": "NexusHomeLink.Plugins.SmartHome",
      "Type": "SmartHomePlugin",
      "Settings": {
        "HomeAssistantUrl": "http://homeassistant:8123",
        "ApiKey": "your-api-key"
      }
    },
    {
      "Name": "Docker",
      "Enabled": true,
      "Assembly": "NexusHomeLink.Plugins.Docker",
      "Type": "DockerPlugin",
      "Settings": {
        "DockerHost": "unix:///var/run/docker.sock"
      }
    }
  ]
}